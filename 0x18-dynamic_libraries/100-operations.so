#include <stdio.h>

/**
 * add - Adds two integers.
 * @a: The first integer.
 * @b: The second integer.
 * Return: The sum of the two integers.
 */
int add(int a, int b) {
    return a + b;
}

/**
 * greet - Prints a greeting message.
 * @name: The name to greet.
 */
void greet(const char* name) {
    printf("Hello, %s!\n", name);
}
